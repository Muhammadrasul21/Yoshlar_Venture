---
import Yoshlar from '../../assets/images/yoshlar-ishlari-logo.svg.svg';
import Jamgarmasi from '../../assets/images/jamgarmasi-logo.svg.svg';
---


 
 <section
        class="bg-gray-50 py-12 sm:py-16 lg:py-20 px-4 rounded-3xl mb-16 "
      >
        <div class="w-full mx-auto">
          <!-- Section title -->
          <h2
            class="max-w-[250px] text-2xl sm:text-3xl font-bold text-gray-900 mb-8 sm:mb-10 border-l-4 border-[#F28E46] pl-4 font-inter-tight"
          >
            Bizga ishongan hamkorlarimiz
          </h2>

          <!-- Cards grid -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 ">
            <!-- Card 1 -->
            <div
              class="bg-white rounded-3xl p-6 sm:p-8 flex flex-col items-center text-center mobile-card-bg"
            >
              <img
                src={Yoshlar.src}
                alt="Yoshlar ishlari agentligi"
                class="w-20 sm:w-24 h-auto mb-4 sm:mb-6"
              />
              <button
                class="bg-white text-[#F28E46] font-semibold rounded-[24px] border border-orange-200 px-6 py-2 hover:bg-orange-50 transition font-inter-tight custom-shadow"
              >
                Ko'proq o'qish
              </button>
            </div>

            <!-- Card 2 -->
            <div
              class="bg-white rounded-3xl p-6 sm:p-8 flex flex-col items-center text-center mobile-card-bg"
            >
              <img
                src={ Jamgarmasi.src }
                alt="Jamg'armasi"
                class="w-20 sm:w-24 h-auto mb-4 sm:mb-6"
              />
              <button
                class="bg-white text-[#F28E46] font-semibold rounded-[24px] border border-orange-200 px-6 py-2 hover:bg-orange-50 transition font-inter-tight custom-shadow"
              >
                Ko'proq o'qish
              </button>
            </div>
          </div>
        </div>
      </section>