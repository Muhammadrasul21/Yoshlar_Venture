---
import downloadIcon from "../assets/downloadIcon.svg";
import Layout from "../layouts/Layout.astro";
import Button from "./Button.astro";
---

<Layout title="Yoshlar Venture">
  <div class="flex justify-center mt-[50px] sm:mt-[65px] mb-[55px] sm:mb-20">
    <div class="flex flex-col items-center w-[398px] sm:w-[628px]">
      <div class="flex items-center justify-center gap-2 sm:gap-6">
        <button
          class="w-12 h-12 bg-[#F28E46] text-[#fff] rounded-[28px] cursor-pointer"
        >
          1
        </button>
        <hr class="w-6 sm:w-[53px] text-[#1B1A1959] dark:text-[#E3E3E3]" />
        <button
          class="w-12 h-12 rounded-[28px] border dark:border-[#535862] border-[#EFF0F3] bg-[#F8F8F8] dark:bg-[#111111] dark:text-[#FFFFFF] cursor-pointer"
        >
          2
        </button>
        <hr class="w-6 sm:w-[53px] text-[#1B1A1959] dark:text-[#E3E3E3]" />
        <button
          class="w-12 h-12 rounded-[28px] border dark:border-[#535862] border-[#EFF0F3] bg-[#F8F8F8] dark:bg-[#111111] dark:text-[#FFFFFF] cursor-pointer"
        >
          3
        </button>
        <hr class="w-6 sm:w-[53px] text-[#1B1A1959] dark:text-[#E3E3E3]" />

        <div class="flex items-center gap-2 sm:gap-4">
          <button
            class="w-12 h-12 rounded-[28px] border dark:border-[#535862] border-[#EFF0F3] bg-[#F8F8F8] dark:bg-[#111111] dark:text-[#FFFFFF] cursor-pointer"
          >
            4
          </button>
          <hr class="w-6 sm:w-[53px] text-[#1B1A1959] dark:text-[#E3E3E3]" />
          <button
            class="w-12 h-12 rounded-[28px] border-red-500 dark:border-[#535862] bg-[#F8F8F8] dark:bg-[#111111] dark:text-[#FFFFFF] cursor-pointer"
          >
            5
          </button>
        </div>
      </div>

      <div class="flex flex-col w-full gap-6 mt-12 mb-10">
        <div class="flex flex-col gap-1.5 w-full">
          <p class="text-[12px] font-medium text-black dark:text-white">
            Startup nomi
          </p>
          <input
            type="text"
            class="bg-[#F8F8F7] dark:bg-inherit dark:border dark:border-[#535862] dark:text-white rounded-[12px] h-[50px] w-full p-4 outline-none"
          />
        </div>

        <div class="flex flex-col gap-1.5 w-full">
          <p class="text-[12px] font-medium text-black dark:text-white">
            Startup tavsifi
          </p>
          <textarea
            placeholder="100 - 150 ta belgi"
            class="bg-[#F8F8F7] dark:bg-inherit dark:border dark:border-[#535862] dark:text-white rounded-xl h-[170px] p-4 w-full font-medium outline-none"
          ></textarea>
        </div>

        <div class="flex flex-col w-full">
          <p class="text-[12px] text-[#020202] dark:text-[#FFFFFF] font-medium">
            Havola ( Ixtiyoriy )
          </p>
          <label
            class="cursor-pointer w-[337px] h-[50px] mt-1.5 mb-2 border border-[#F28E46] rounded-xl px-6 py-[17.5px] flex items-center"
          >
            <div class="flex items-center gap-2">
              <p class="text-[12px] text-[#F28E46] font-medium">Yuklash</p>
              <img src={downloadIcon.src} alt="" />
            </div>
            <input type="file" class="hidden" />
          </label>
          <p class="text-[#535862] dark:text-[#E3E3E3] text-[12px] font-medium">
            Video, Fayl, Pitch deck
          </p>
        </div>
      </div>

      <a href="/Stage" class="w-full"><Button /></a>
    </div>
  </div>
</Layout>
