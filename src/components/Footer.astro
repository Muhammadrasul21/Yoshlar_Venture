---
import Logo from '../assets/images/Group.svg';
import Email from '../assets/images/Email.svg';
import Company from '../assets/images/company.svg'; 
import Call from '../assets/images/call.svg';
import Telegram from '../assets/images/Telegram.svg';
import Instagram from '../assets/images/instagram.svg';
import YouTube from '../assets/images/youtube.svg';
---
 
 <footer class="bg-[#020202] text-white px-4 sm:px-6 lg:px-[84px]">
      <!-- Top section -->
      <div
        class="max-w-[1440px] mx-auto py-12 sm:py-16 grid grid-cols-1 lg:grid-cols-3 gap-8 sm:gap-12"
      >
        <!-- Left: Logo & Contact -->
        <div class="space-y-6 sm:space-y-[44px]">
          <a href="/" class="flex items-center gap-2">
            <img
              src={Logo.src}
              alt="Yoshlar Ventures logo"
              class="h-[38px] w-[37px]"
            />
            <span
              class="max-w-[100px] text-sm sm:text-[15px] font-bold font-inter-tight"
              >YOSHLAR VENTURES</span
            >
          </a>
          <ul class="flex flex-col gap-4 sm:gap-[24px] text-sm">
            <li class="flex items-start space-x-3">
              <img
                src={Email.src}
                alt="Email"
                class="w-6 h-6 mt-1"
              />
              <a
                href="mailto:support@yoshlarventures.com"
                class="hover:underline font-inter-tight"
              >
                support@yoshlarventures.com
              </a>
            </li>
            <li class="flex items-start space-x-3">
              <img
                src={Company.src}
                alt="Address"
                class="w-6 h-6 mt-1"
              />
              <address class="not-italic font-inter-tight">
                12720 Hillcrest Road Suite 980,<br />Dallas, TX 75230
              </address>
            </li>
            <li class="flex items-center space-x-3">
              <img src={Call.src} alt="Phone" class="w-6 h-6" />
              <a
                href="tel:+99899445566"
                class="hover:underline font-inter-tight"
                >+998 99 445 5566</a
              >
            </li>
          </ul>
          <div class="flex space-x-4 sm:space-x-[24px]">
            <a href="#" aria-label="Telegram" class="hover:text-gray-400">
              <img
                src={Telegram.src}
                alt="Telegram"
                class="w-8 h-8"
              />
            </a>
            <a href="#" aria-label="Instagram" class="hover:text-gray-400">
              <img
                src={Instagram.src}
                alt="Instagram"
                class="w-8 h-8"
              />
            </a>
            <a href="#" aria-label="YouTube" class="hover:text-gray-400">
              <img
                src={YouTube.src}
                alt="YouTube"
                class="w-8 h-8"
              />
            </a>
          </div>
        </div>

        <!-- Middle: Navigation -->
        <nav
          aria-label="Footer navigation"
          class="flex flex-col gap-6 sm:gap-[53px] text-sm"
        >
          <button
            class="flex items-center justify-center gap-2 px-[14px] py-[6px] w-[78px] h-[31px] bg-white text-black rounded-lg font-inter-tight"
          >
            Menyu
          </button>
          <div class="flex flex-col gap-3 sm:gap-[16px]">
            <a href="#" class="block hover:underline font-inter-tight"
              >Asosiy</a
            >
            <a href="#" class="block hover:underline font-inter-tight"
              >Biz haqimizda</a
            >
            <a href="#" class="block hover:underline font-inter-tight"
              >Tadbirlar</a
            >
            <a href="#" class="block hover:underline font-inter-tight"
              >Startuplar (Portfel)</a
            >
            <a href="#" class="block hover:underline font-inter-tight"
              >Hamkorlar</a
            >
            <a href="#" class="block hover:underline font-inter-tight"
              >Youtube blog</a
            >
            <a href="#" class="block hover:underline font-inter-tight"
              >Kontaktlar</a
            >
          </div>
        </nav>

        <!-- Right: Embedded Map -->
        <div class="overflow-hidden rounded-2xl h-64 lg:h-full">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d47957.4376758804!2d69.25377351118344!3d41.30146971801885!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1750851818511!5m2!1sen!2s"
            class="w-full h-full"
            style="border: 0"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            aria-label="Yoshlar Ventures location on map"
          ></iframe>
        </div>
      </div>

      <!-- Divider -->
      <hr class="border-gray-700" />

      <!-- Bottom section -->
      <div
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 flex flex-col lg:flex-row items-center justify-between text-sm"
      >
        <div
          class="flex flex-col sm:flex-row items-center space-y-2 sm:space-y-0 sm:space-x-6 text-gray-400"
        >
          <span class="font-inter-tight">Â© 2025 Yoshlar ventures</span>
          <span class="font-inter-tight"
            >Developed and maintained by <strong>Forte</strong></span
          >
        </div>
        <div class="flex space-x-6 mt-4 lg:mt-0">
          <a href="#" class="hover:underline text-gray-400 font-inter-tight"
            >Privacy Policy</a
          >
          <a href="#" class="hover:underline text-gray-400 font-inter-tight"
            >Terms & Conditions</a
          >
        </div>
      </div>
    </footer>